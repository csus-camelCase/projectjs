<!DOCTYPE html>
<html lang="en">
    <!--ejs-->
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form - system1seachsac</title>
    <link rel="stylesheet" href="style.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>

<body>
    <div class="wrapper">
        <!-- Update action to /login -->
        <form action="/login" method="POST" id="loginForm" novalidate>
            <img src="images/companylogo.png" alt="logo">
        
            <div class="input-box">
                <input type="text" name="email" id="email" placeholder="Email" value="<%= email %>" required>
                <i class='bx bxs-user'></i> 
                <span id="emailError" class="error-message" style="display: none; color: red;">Please fill out this field</span>
                <% if (typeof invalidCredentials !== 'undefined' && invalidCredentials) { %>
                    <span class="error-message" style="color: red; margin-top: 5px;">
                        Invalid email or password
                    </span>
                <% } %>
            </div>
        
            <div class="input-box">
                <input type="password" name="password" id="password" placeholder="Password" required>
                <i class='bx bxs-lock-alt'></i>
                <span id="passwordError" class="error-message" style="display: none; color: red;">Please fill out this field</span>
                <% if (typeof invalidCredentials !== 'undefined' && invalidCredentials) { %>
                    <span class="error-message" style="color: red; margin-top: 5px;">
                        Invalid email or password
                    </span>
                <% } %>
            </div>
        
            <div class="forgot">
                <label><input type="checkbox" id="rememberMe" name="rememberMe"> Remember me </label>
                <a name="forgot" href="forgot.html">Forgot Password?</a>
            </div>
        
            <button type="submit" class="btn">Login</button>
        
            <div class="sign-up">
                <p>Don't Have An Account? <a href="signup.html">Sign-Up</a> </p>
            </div>
        </form>        
    </div>
    <script>
        document.getElementById('loginForm').addEventListener('submit', function(event) {
            let isValid = true;
    
            const emailInput = document.getElementById('email');
            const passwordInput = document.getElementById('password');
    
            const emailError = document.getElementById('emailError');
            const passwordError = document.getElementById('passwordError');
    
            // Clear previous errors
            emailError.style.display = 'none';
            passwordError.style.display = 'none';
    
            // Custom validation
            if (!emailInput.value.trim()) {
                emailError.style.display = 'inline';
                isValid = false;
            }
    
            if (!passwordInput.value.trim()) {
                passwordError.style.display = 'inline';
                isValid = false;
            }
    
            if (!isValid) {
                event.preventDefault(); // Prevent form submission if fields are empty
            }
        });
    </script>    
</body>
</html>
